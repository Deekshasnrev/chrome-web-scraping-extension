{
    "manifest_version": 3,
    "name": "Smart Web Automation and Content Scraping Assistant",
    "version": "1.0",
    "permissions": ["activeTab", "tabs"],
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://example.com/"], 
        "js": ["scripts/content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["html/popup.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  